<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="web_editor.FieldTextHtmlSimple">
        <div class="oe_form_field oe_form_field_html_text" t-att-style="widget.node.attrs.style">
            <textarea readonly="readonly"/>
        </div>
    </t>

    <t t-name="web_editor.FieldTextHtml">
        <div class="oe_form_field oe_form_field_html oe_form_embedded_html" t-att-style="widget.node.attrs.style">
            <iframe/>
        </div>
    </t>

    <t t-name="web_editor.FieldTextHtml.button.reset">
        <div class="btn-group pull-right">
            <button class="o_reset_translation btn btn-default btn-sm btn-small" title="Reset from source"><span class="fa fa-upload"></span></button>
        </div>
    </t>

    <t t-name="web_editor.FieldTextHtml.button.translate">
        <div class="btn-group pull-right">
            <button t-if="field.translate &amp;&amp; field_manager.get('actual_mode') !== 'create'" class="btn btn-default btn-sm btn-small">
                <img border="0" class="oe_field_translate oe_input_icon" height="16" width="16" src="/web/static/src/img/icons/terp-translate.png" style="margin: 0 -3px;"/>
            </button>
        </div>
    </t>

    <t t-name="web_editor.FieldTextHtml.button">
        <span style="margin: 5px; position: fixed; top: 0; right: 0; z-index: 2000;">
            <button t-if="field.translate &amp;&amp; field_manager.get('actual_mode') !== 'create'" class="btn btn-primary" style="padding: 1px 3px 1px 4px;">
                <img border="0" class="oe_field_translate oe_input_icon" height="16" width="16" src="/web/static/src/img/icons/terp-translate.png"/>
            </button>
            <button class="o_fullscreen btn btn-primary" style="padding: 1px;">
                <span class="fa fa-arrows-alt" style="color: white;margin: 3px 5px;"></span>
            </button>
        </span>
    </t>

</templates>
