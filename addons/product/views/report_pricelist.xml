<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_pricelist">
    <t t-call="report.html_container">
        <t t-call="report.internal_layout">
            <div class="page">
                <h2>Price List</h2>
                <div class="row mt32 mb32">
                    <div class="col-xs-3">
                        <strong>Price List Name</strong>:
                        <p t-esc="get_pricelist"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Currency</strong>:
                        <p t-esc="get_currency"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Print date</strong>:
                        <p t-esc="time.strftime('%Y-%m-%d')"/>
                    </div>
                </div>

                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th colspan="3">
                                <strong>Description</strong>
                            </th>
                            <t t-if="get_titles">
                                <t t-foreach="get_titles" t-as="k">
                                    <th t-if="k.has_key('qty1')"><strong t-esc="k['qty1']"/></th>
                                    <th t-if="k.has_key('qty2')"><strong t-esc="k['qty2']"/></th>
                                    <th t-if="k.has_key('qty3')"><strong t-esc="k['qty3']"/></th>
                                    <th t-if="k.has_key('qty4')"><strong t-esc="k['qty4']"/></th>
                                    <th t-if="k.has_key('qty5')"><strong t-esc="k['qty5']"/></th>
                                </t>
                            </t>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-if="get_categories">
                            <t t-foreach="get_categories" t-as="c">
                                <tr>
                                    <td t-att-colspan="len(get_titles[0].keys())+3">
                                        <strong t-esc="c['name']"/>
                                    </td>
                                </tr>
                                <t t-if="doc_model == 'product.template'">
                                    <tr t-foreach="c['products']" t-as="product">
                                        <tr>
                                           <td t-att-colspan="len(get_titles[0].keys())+3">
                                               <i t-esc="product['name']"/>
                                           </td>
                                        </tr>
                                        <tr t-foreach="product['variants']" t-as="p">
                                            <t t-call="product.pricelist_line"></t>
                                        </tr>
                                     </tr>
                                </t>
                                <t t-if="doc_model == 'product.product'">
                                    <tr t-foreach="c['products']" t-as="p">
                                        <t t-call="product.pricelist_line"></t>
                                    </tr>
                                </t>
                            </t>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </t>
</template>
<template id="pricelist_line">
    <td colspan="3">
        <t t-if="p.get('code')">
            [<span t-esc="p['code']"/>]
        </t> 
        <span t-esc="p['name']"/>
    </td>
    <td t-if="p.has_key('qty1') and p['qty1']"><strong t-esc="p['qty1']"/></td>
    <td t-if="p.has_key('qty2') and p['qty2']"><strong t-esc="p['qty2']"/></td>
    <td t-if="p.has_key('qty3') and p['qty3']"><strong t-esc="p['qty3']"/></td>
    <td t-if="p.has_key('qty4') and p['qty4']"><strong t-esc="p['qty4']"/></td>
    <td t-if="p.has_key('qty5') and p['qty5']"><strong t-esc="p['qty5']"/></td>
</template>
</data>
</openerp>
