<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_backend" name="hr_evaluation assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/hr_evaluation/static/src/css/hr_evaluation.css"/>
            <script type="text/javascript" src="/hr_evaluation/static/src/js/hr_evaluation.js"></script>
        </xpath>
    </template>
    <template id="back_inherit" name="Survey" inherit_id="survey.back">
        <xpath expr="//div[@name='Back_to_survey']" position="inside">
            <t t-if="user_input and user_input.survey_res_id">
                <a t-attf-href="/web#id=#{user_input.survey_res_id}&amp;view_type=form&amp;model=hr_evaluation.evaluation&amp;action=hr_evaluation.open_view_hr_evaluation_tree" class="btn btn-default">Back to Appraisal</a>
            </t>
        </xpath>
    </template>
</odoo>
