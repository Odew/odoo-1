<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
        <record model="ir.ui.view" id="coupon_program_form_view">
            <field name="name">Sale Coupon Program</field>
            <field name="model">sale.couponprogram</field>
            <field name="arch" type="xml">
                <form string="Coupon Program">
                     <sheet>
                        <div class="oe_right">
                            <button class="oe_stat_button" type="action" string="Generated Coupon" icon="fa-xing"/>
                            <button class="oe_inline oe_stat_button" type="action" string="Sale Order" icon="fa-sitemap"/>
                        </div>
                        <group>
                            <div class="oe_left" style="width: 350px;">
                                <h1><field name="program_name" class="oe_title" placeholder="Promotion Rule Name..." height="20px"/></h1>
                                <label class="oe_edit_only" for="program_type" string="Program Type"/>
                                <field name="program_type"/>
                            </div>
                            <group>
                                    <field name="is_program_active"/>
                                    <field name="program_sequence"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Conditions" name="condition">
                                <group class="oe_left" style="width: 400px;">
                                    <field name="partner_id"/>
                                    <field name="company_id"/>
                                    <field name="purchase_type"/>
                                    <label for="validity_duration" string="Validity duration"/>
                                    <div>
                                        <field name="validity_duration" class="oe_inline"/>
                                        <field name="validity_type" class="oe_inline"/>
                                    </div>
                                    <label for="minimum_amount" string="Amount"/>
                                    <div>
                                        <field name="minimum_amount" attrs="{'invisible': [('purchase_type', '!=', 'amount')]}" class="oe_inline"/>
                                        <field name="currency_id" attrs="{'invisible': [('purchase_type', '!=', 'amount')]}" class="oe_inline"/>
                                        <field name="tax" attrs="{'invisible': [('purchase_type', '!=', 'amount')]}" class="oe_inline"/>
                                     </div>
                                    <field name="product_id" attrs="{'invisible': [('purchase_type', '!=', 'product')]}"/>
                                    <field name="product_category_id" attrs="{'invisible': [('purchase_type', '!=', 'category')]}"/>
                                </group>
                            </page>
                            <page string="Rewards" name="rewards">
                                <form>
                                    <group class="oe_left" style="width: 400px;">
                                        <field name="reward_type"/>
                                        <field name="reward_shipping_free" widget="radio" class="oe_inline"/>
                                        <field name="reward_product_product_id" attrs="{'invisible': [('reward_type', '!=', 'product')]}"/>
                                        <field name="reward_product_uom_id" attrs="{'invisible': [('reward_type', '!=', 'product')]}"/>
                                        <field name="reward_quantity" attrs="{'invisible': [('reward_type', '!=', 'product')]}"/>

                                        <field name="reward_discount_type" attrs="{'invisible': [('reward_type', '!=', 'discount')]}"/>

                                        <field name="reward_discount_on" attrs="{'invisible': [('reward_discount_type', '!=', 'percentage')]}" widget="radio" class="oe_inline"/>
                                        <field name="reward_discount_percentage" attrs="{'invisible': [('reward_discount_type', '!=', 'percentage')]}"/>
                                        <field name="reward_discount_on_product_id" attrs="{'invisible': [('reward_discount_on', '!=', 'specific_product')]}"/>

                                        <field name="reward_discount_amount" attrs="{'invisible': [('reward_discount_type', '!=', 'amount')]}"/>
                                        <field name="reward_tax" attrs="{'invisible': [('reward_discount_type', '!=', 'amount')]}"/>
                                        <field name="reward_partial_use" attrs="{'invisible': [('reward_discount_type', '!=', 'amount')]}"/>
                                        <field name="reward_gift_coupon_id" attrs="{'invisible': [('reward_type', '!=', 'coupon')]}"/>
                                    </group>
                                </form>
                            </page>
                        </notebook>
                     </sheet>
                </form>
            </field>
        </record>

      <record model="ir.ui.view" id="coupon_program_tree_view">
            <field name="name">Sale Coupon Program tree view</field>
            <field name="model">sale.couponprogram</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="program_name"/>
                    <field name="is_program_active"/>
                </tree>
            </field>
        </record>

        <record id="action_sale_coupon_configuration" model="ir.actions.act_window">
            <field name="name">Sale Coupon Program</field>
            <field name="res_model">sale.couponprogram</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click here to create a new type of coupon.
                </p>
                <p>
                    Use coupon to allow your customer to buy a service and subscribe to this service later from your shop.
                </p>
            </field>
        </record>
        <menuitem id="base.menu_sales_config" parent="base.menu_base_config" sequence="1" name="Sales"/>
        <menuitem action="action_sale_coupon_configuration" id="base.menu_coupon_type_config" parent="base.menu_sales_config"/>
  </data>
</openerp>