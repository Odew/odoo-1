<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_partner_contract_buttons" model="ir.ui.view">
            <field name="name">view.partner.contract.buttons</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.partner_view_buttons"/>
            <field name="arch" type="xml">
                <xpath expr='//field[@name="journal_item_count"]' position='after'>
                    <button class="oe_inline oe_stat_button" type="action" name="%(action_account_analytic_overdue_all)d" 
                        icon="fa-book">
                        <field string="Contracts" name="contracts_count" widget="statinfo"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</openerp>