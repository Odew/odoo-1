<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id='report_followup_all' inherit_id='account.report_followup_all'>
    <xpath expr="//div[@id='oe-account-final-summary']" position='after'>
        <t t-foreach='action_contexts' t-as='context'>
            <div class="alert alert-info" role="alert">
                <p><strong><t t-esc='context.partner_id.name' /></strong></p>
                <p><t t-esc="context.level.manual_action_responsible_id.name and context.level.manual_action_responsible_id.name + '+' or ''" /> <t t-esc='context.level.manual_action_note' /></p>
            </div>
        </t>
    </xpath>
</template>
<template id='report_followup' inherit_id='account.report_followup'>
    <xpath expr="//script" position='after'>
        <script type="text/javascript" src="/account_followup/static/src/js/account_report_widgets.js"></script>
    </xpath>
    <xpath expr="//script[@id='oe-account-inline-script']" position='replace'>
        <script type="text/javascript" id='oe-account-inline-script'>
            (function () {
                'use strict';

                $(document).ready(function() {
                    var _t = openerp._t;
                    var reportWidgets = new openerp.account_followup.FollowupReportWidgets();
                    reportWidgets.setElement($('.oe_account_report_widgets'));
                    reportWidgets.start();
                });
            })();
        </script>
    </xpath>
</template>
<template id='report_followup_body' inherit_id='account.report_followup_body'>
    <xpath expr="//div[@class='col-sm-5 oe-account-manual-action']">
        <div class="alert alert-info" role="alert" t-if="context.level.manual_action and context.level.manual_action_note">
            <p><strong>Manual action</strong></p>
            <p><t t-esc="context.level.manual_action_responsible_id.name and context.level.manual_action_responsible_id.name + '+' or ''" /> <t t-esc='context.level.manual_action_note' /></p>
        </div>
    </xpath>
    <xpath expr="//h2/span/t" position='before'>
        <span t-if="not context.env.context.get('public')" class="dropdown" t-att-partner='context.partner_id.id'>
            <span data-toggle="dropdown">
                <i t-if="context.partner_id.trust == 'good'" class="fa fa-circle" style="color: green;"></i>
                <i t-if="context.partner_id.trust == 'normal'" class="fa fa-circle" style="color: grey;"></i>
                <i t-if="context.partner_id.trust == 'bad'" class="fa fa-circle" style="color: red;"></i>
            </span>
            <ul class="dropdown-menu" role="menu">
                <li><a class='changeTrust' new-trust='good'>Good Debtor</a></li>
                <li><a class='changeTrust' new-trust='normal'>Normal Debtor</a></li>
                <li><a class='changeTrust' new-trust='bad'>Bad Debtor</a></li>
            </ul>
        </span>
    </xpath>
    <xpath expr="//div[@id='action-buttons']" position='replace'>
        <div id='action-buttons' t-if="mode != 'print'" style='text-align: right;'>
            <a type="button" class="btn btn-default followup-skip" t-att-partner="str(context.partner_id.id)">Skip</a>
            <a t-if='context.level.send_letter' type="button" class="btn btn-primary followup-letter" t-att-target="'/account/followup_report/' + str(context.partner_id.id) + '/?pdf'">Print Letter</a>
            <a t-if='not context.level.send_letter' type="button" class="btn btn-default followup-letter" t-att-target="'/account/followup_report/' + str(context.partner_id.id) + '/?pdf'">Print Letter</a>
            <a t-if='context.level.send_email' type="button" class="btn btn-primary followup-email">Send by email</a>
            <a t-if='not context.level.send_email' type="button" class="btn btn-default followup-email">Send by email</a>
            <a t-if='context.level.manual_action' type="button" class="btn btn-primary followup-action">Manual Action Done</a>
        </div>
    </xpath>
</template>
