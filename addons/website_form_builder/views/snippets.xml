<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="s_form_builder_form" name="Form">
            <form action="/website_form/" method="post" class="o_form_builder form-horizontal mt32" enctype="multipart/form-data">
                <div class="container o_form_builder_form-success">
                    <div class="alert alert-success">
                        Your message has been sent successfully.
                        <button type="button" class="close" data-dismiss="alert">Ã—</button>
                    </div>
                </div>
                <div class="container o_form_builder_form-danger">
                    <div class="alert alert-danger">
                        Your message has not been sent.
                        <button type="button" class="close" data-dismiss="alert">&amp;times;</button>
                    </div>
                </div>
                <div class="form-group form-field form-init" data-form="input">
                    <label for="contact_name" class="o_form_builder_light col-md-3 col-sm-4 control-label">Your Name</label>
                    <div class="col-md-7 col-sm-8">
                        <div class="wrap-unwrap">
                            <input type="text" class="form-control form-data" id="contact_name" name="contact_name" placeholder="" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3 col-sm-offset-4 col-sm-8 col-md-7">
                        <button class="btn btn-primary btn-lg o_send_button">Send</button>
                    </div>
                </div>
            </form>
        </template>

    <!---  FIELD SNIPPETS -->

        <template id="s_form_builder_input" name="Input Text">
            <div class="form-group  form-field" data-form="input">
                <label for="" class="col-md-3 col-sm-4 control-label">Label</label>
                <div class="col-md-7 col-sm-8">
                    <div class="wrap-unwrap">
                        <input type="text" class="form-control form-data" placeholder="" />
                    </div>
                    <p class="help-block"></p>
                </div>
            </div>
        </template>

        <template id="s_form_builder_hidden" name="Input Hidden">
            <div class="form-group form-field" data-form="hidden">
                <label for="" class="col-md-3 col-sm-4 control-label">Label</label>
                <div class="col-md-7 col-sm-8">
                    <div class="wrap-unwrap">
                        <p class="form-control">Hidden Field</p>
                        <input type="hidden" class="form-control form-data" name="hidden" value=""/>
                    </div>
                </div>
            </div>
        </template>

        <template id="s_form_builder_textarea" name="Textarea">
            <div class="form-group  form-field" data-form="textarea">
                <label for="" class="col-md-3 col-sm-4 control-label">Label</label>
                <div class="col-md-7 col-sm-8">
                    <textarea  class="form-control form-data" name="" style="min-height: 120px"></textarea>
                    <p class="help-block"></p>
                </div>
            </div>
        </template>

        <template id="s_form_builder_checkbox" name="Checkbox">
            <div class="form-group  form-field" data-form="checkbox">
                <label for="checkbox" class="col-md-3 col-sm-4 control-label">Label</label>
                <div class="col-md-7 col-sm-8">
                    <div class="wrap-options form-data multivalues">
                        <div class="checkbox">
                            <label for="checkbox-0">
                                <input type="checkbox" name="checkbox-0" id="checkbox-0"  value="0" />
                                <span class="option">option 0</span>
                            </label>
                        </div>
                       <div class="checkbox">
                            <label>
                                <input type="checkbox" name="checkbox-1" id="checkbox-1" value="1" />
                                <span class="option">option 1</span>
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="checkbox-2" id="checkbox-2" value="2" />
                                <span class="option">option 2</span>
                            </label>
                        </div>
                    </div>
                    <p class="help-block"></p>
                </div>
            </div>
        </template>

        <template id="s_form_builder_radio" name="Radio">
            <div class="form-group  form-field" data-form="radio">
                <label for="radio" class="col-md-3 col-sm-4 control-label">Label</label>
                <div class="col-md-7 col-sm-8">
                    <div class="wrap-options form-data multivalues">
                        <div class="radio">
                            <label for="radio-0">
                                <input type="radio" name="radio-0" id="radio-0"  value="0" />
                                <span class="option">option 0</span>
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="radio-1" id="radio-1" value="1" />
                                <span class="option">option 1</span>
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="radio-2" id="radio-2" value="2" />
                                <span class="option">option 2</span>
                            </label>
                        </div>
                    </div>
                    <p class="help-block"></p>
                </div>
            </div>
        </template>

        <template id="s_form_builder_select" name="Select">
            <div class="form-group  form-field" data-form="select">
                <label for="select" class="col-md-3 col-sm-4 control-label">Label</label>
                <div class="col-md-7 col-sm-8">
                    <select id="select" class="form-control form-data wrap-options">
                        <option value="0">Option 0</option>
                        <option value="1">Option 1</option>
                        <option value="2">Option 2</option>
                    </select>
                    <p class="help-block"></p>
                </div>
            </div>
        </template>

        <template id="s_form_builder_upload" name="Upload Field">
            <div class="form-group  form-field input-file" data-form="inputfile">
                <label for="select" class="col-md-3 col-sm-4 control-label">Label</label>
                <div class="col-md-7 col-sm-8">
                    <div class="input-group">
                        <span class="input-group-btn">
                            <span class="btn btn-primary btn-file">
                                <span class="browse-label">Browse</span>
                                <input type="file" multiple="true" class="form-data"/>
                            </span>
                        </span>
                        <input type="text" class="form-control" placeholder="" readonly="true" />
                    </div>
                    <p class="help-block"></p>
                </div>
            </div>
        </template>

        <template id="form_builder_snippets" name="Form Builder Snippets" inherit_id="website.snippets">
            <xpath expr="//ul" position="inside">    
                <li><a href="#snippet_form" ></a></li>
                <li>
                    <a href="#snippet_form" class="scroll-link">
                        <span class="fa-stack fa-lg">
                            <i class="fa fa-square fa-stack-2x fa-inverse"></i>
                            <i class="fa fa-pencil-square-o fa-stack-1x"></i>
                        </span>
                    </a>
                </li>
            </xpath> 
            <xpath expr="//div[@id='snippet_feature']/div[@class='o_panel_body']" position="inside">
                <t t-snippet="website_form_builder.s_form_builder_form"
                   t-thumbnail="/website_form_builder/static/src/img/blocks/form.gif"/>
            </xpath>

            <xpath expr="//div[@id='snippet_effect']" position="after">    
                <div id="snippet_form" class="o_panel">
                    <div class="o_panel_header">
                        <span class="fa-stack">
                            <i class="fa fa-pencil-square-o fa-stack-1x"></i>
                        </span> Form
                    </div>
                    <div class="o_panel_body">
                        <t t-snippet="website_form_builder.s_form_builder_input"
                           t-thumbnail="/website_form_builder/static/src/img/blocks/input.gif"/>
                        <t t-snippet="website_form_builder.s_form_builder_hidden"
                           t-thumbnail="/website_form_builder/static/src/img/blocks/hidden.gif"/>
                        <t t-snippet="website_form_builder.s_form_builder_textarea"
                           t-thumbnail="/website_form_builder/static/src/img/blocks/textarea.gif"/>
                        <t t-snippet="website_form_builder.s_form_builder_checkbox"
                           t-thumbnail="/website_form_builder/static/src/img/blocks/checkbox.gif"/>
                        <t t-snippet="website_form_builder.s_form_builder_radio"
                           t-thumbnail="/website_form_builder/static/src/img/blocks/radio.gif"/>
                        <t t-snippet="website_form_builder.s_form_builder_select"
                           t-thumbnail="/website_form_builder/static/src/img/blocks/select.gif"/>
                        <t t-snippet="website_form_builder.s_form_builder_upload"
                           t-thumbnail="/website_form_builder/static/src/img/blocks/upload.gif"/>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@id='snippet_options']" position="inside">
                <div     data-js='formBuilder'
                        data-selector='form[action*="/website_form/"]'
                        data-drop-in=".oe_structure, [data-oe-type=html]"
                >
                    
                    <li data-execute=""><a href="#">Change Form Parameters</a></li>
                </div>
                        
                <div data-js='formBuilderFields'
                    data-selector=".form-field"
                    data-drop-near=".form-field"
                    data-drop-in="form"></div>
                
                <div data-js='formBuilderFields'
                    data-selector=".form-field"
                    data-drop-near=".form-field"
                >
                    <li data-execute=""><a href="#">Change Field Parameters</a></li>
                </div> 
            </xpath>
        </template>
    </data>
</openerp>

