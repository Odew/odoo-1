<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.actions.act_window" id="action_view_click_statistics">
            <field name="name">Statistics of Clicks</field>
            <field name="res_model">links.click</field>
            <field name="view_mode">graph</field>
            <field name="domain">[('link_id', 'IN', ids)]</field>
        </record>

        <!-- Search -->
        <record id="view_links_filter" model="ir.ui.view">
            <field name="name">Links</field>
            <field name="model">links</field>
            <field name="arch" type="xml">
                <search string="Tracked Link">
                    <field name="title"/>
                    <field name="url" string="Title and URL" filter_domain="['|', ('title', 'ilike', self), ('url', 'ilike', self)]"/>
                </search>
            </field>
        </record>

        <!-- Links views -->
        <record id="view_links_form" model="ir.ui.view">
            <field name="name">links.form</field>
            <field name="model">links</field>
            <field name="arch" type="xml">
                <form string="Link">
                    <sheet>
                        <div class="oe_button_box pull-right">
                            <button type="object" icon="fa-sign-out" name="action_visit_page"
                                string="Visit Page" class="oe_stat_button"/>

                            <button type="object" class="oe_stat_button" name="action_view_statistics" icon="fa-bar-chart">
                                <field name="count" string="Clicks" widget="statinfo"/>
                            </button>

                        </div>
                        <group>
                            <field name="title"/>
                            <field name="url"/>
                            <field name="short_url"/>
                        </group>

                        <group>
                            <field name="campaign_id"/>
                            <field name="medium_id"/>
                            <field name="source_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_links_form_stats" model="ir.ui.view">
            <field name="name">links.my.form</field>
            <field name="model">links</field>
            <field name="arch" type="xml">
                <form string="Link Graph">
                    <sheet>
                        <field name="link_click_ids">
                            <graph>
                                <field name="link_id"/>
                                <field name="ip"/>
                                <field name="country_id"/>
                            </graph>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_links_stats">
            <field name="name">links.form.graph.action</field>
            <field name="res_model">links</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_links_form_stats"/>
        </record>

        <record id="view_links_tree" model="ir.ui.view">
            <field name="name">links.tree</field>
            <field name="model">links</field>
            <field name="arch" type="xml">
                <tree string="Links">
                    <field name="create_date"/>
                    <field name="title"/>
                    <field name="url"/>
                    <field name="short_url"/>
                    <field name="count"/>
                </tree>
            </field>
        </record>

        <record id="view_links_graph" model="ir.ui.view" >
            <field name="name">links.graph</field>
            <field name="model">links</field>
            <field name="arch" type="xml">
                <graph string="Links"  type="bar">
                    <field name="url" type="row"/>
                    <field name="count" type="measure"/>
                </graph>
            </field>
        </record>

        <!-- Action for links-->
        <record model="ir.actions.act_window" id="action_links">
            <field name="name">Link Tracker</field>
            <field name="res_model">links</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph</field>
        </record>

        <!-- Links click views -->
        <record id="view_links_click_form" model="ir.ui.view">
            <field name="name">links.click.form</field>
            <field name="model">links.click</field>
            <field name="arch" type="xml">
                <form string="Link Clicks">
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <field name="link_id"/>
                            <field name="ip"/>
                            <field name="country_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_links_click_tree" model="ir.ui.view">
            <field name="name">links.click.tree</field>
            <field name="model">links.click</field>
            <field name="arch" type="xml">
                <tree string="Links Clicks">
                    <field name="link_id"/>
                    <field name="ip"/>
                    <field name="country_id"/>
                </tree>
            </field>
        </record>

        <record id="view_links_click_graph" model="ir.ui.view" >
            <field name="name">links.click.graph</field>
            <field name="model">links.click</field>
            <field name="arch" type="xml">
                <graph string="Link Clicks">
                    <field name="link_id"/>
                    <field name="ip"/>
                    <field name="country_id"/>
                </graph>
            </field>
        </record>

        <!-- Action for links click-->
        <record model="ir.actions.act_window" id="action_links_click">
            <field name="name">Tracked Links</field>
            <field name="res_model">links.click</field>
            <field name="view_type">form</field>
            <field name="view_mode">graph,tree,form</field>
        </record>

        <menuitem id="menu_url_shortener_main" name="Link Tracker" parent="base.marketing_menu" groups="base.group_no_one"/>
        <menuitem id="menu_url_shortener_links" name="Tracked Links" parent="menu_url_shortener_main" action="action_links"/>
    </data>
</openerp>
