<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

  <template id="dashboard" name="Recurrent Revenue Dashboard" page="True">
    <t t-name="account_contract_dashboard.dashboard"/>
    <t t-call="website.layout">
    <div id="wrap" class="oe_structure oe_empty mb64" style="background-color: #EAEAEA;">
      <div class="container">
          
          <div class="row">              
            <div class="col-sm-12 text-center">
              <h1 class="text-muted ">Recurrent Revenue Dashboard</h1>
            </div>
          </div>

          <hr/>

          <div class="row mb32">
            <div class="col-sm-12">
              <div class="col-sm-4 text-left">
                <a href="#">All products</a>
              </div>
              <div class="col-sm-8 text-right">
                <input type="date" name="date_from" t-att-value="default_date_from"/> to <input type="date" name="date_to" t-att-value="default_date_to"/> <button class="btn btn-primary">Update</button>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-12">

              <div class="col-sm-4">

                <a class="fill-div" href="account_contract_dashboard/detailed/mrr">
                  <div class="box">
                    <div>
                      <h1 style="font-size: 42px; color: #2693d5;"><t t-esc="mrr"/><t t-esc="currency"/></h1>
                      <div class="trend">
                        <h2 class="oGreen mb0">+25%</h2>
                        <span style="font-size: 10px;">30 Days Ago</span>
                      </div>
                    </div>
                    <div>
                      <h4 class="text-center mt32">Monthly Recurring Revenue</h4>
                    </div>
                  </div>
                </a>
              </div>

              <div class="col-sm-4">

                <a class="fill-div" href="account_contract_dashboard/detailed/mrr">
                  <div class="box">
                    <div>
                      <h1 style="font-size: 42px; color: #2693d5;"><t t-esc="938"/><t t-esc="currency"/></h1>
                      <div class="trend">
                        <h2 class="oRed mb0">+6.6%</h2>
                        <span style="font-size: 10px;">30 Days Ago</span>
                      </div>
                    </div>
                    <div>
                      <h4 class="text-center mt32">Net Revenue</h4>
                    </div>
                  </div>
                </a>
              </div>

              <div class="col-sm-4">

                <a class="fill-div" href="account_contract_dashboard/detailed/mrr">
                  <div class="box">
                    <div>
                      <h1 style="font-size: 42px; color: #2693d5;"><t t-esc="28.803"/><t t-esc="currency"/></h1>
                      <div class="trend">
                        <h2 class="oGreen mb0">+5.9%</h2>
                        <span style="font-size: 10px;">30 Days Ago</span>
                      </div>
                    </div>
                    <div>
                      <h4 class="text-center mt32">Average Revenue per Contract</h4>
                    </div>
                  </div>
                </a>
              </div>

            </div>
          </div>

      </div>

    </div>
    </t>
  </template>

  <template id="detailed_dashboard" name="Detailed Dashboard" page="True">
    <t t-name="account_contract_dashboard.detailed_dashboard"/>
    <t t-call="website.layout">
    <div id="wrap" class="oe_structure oe_empty" style="background-color: #EAEAEA;">
      <div class="container">
          
          <div class="row">              
            <div class="col-sm-12 text-center">
              <h1 class="text-muted "><t t-esc="report_name"/></h1>
            </div>
          </div>

          <hr/>

          <div class="row mb32">
            <div class="col-sm-12">
              <div class="col-sm-4 text-left">
                <a href="#">All products</a>
              </div>
              <div class="col-sm-8 text-right">
                <input type="date" name="date_from" t-att-value="default_date_from"/> to <input type="date" name="date_to" t-att-value="default_date_to"/> <button class="btn btn-primary">Update</button>
              </div>
            </div>
          </div>

          <div class="row">
            <div id="chart_div" class="box" style="height: 300px;">
              <input type="hidden" name="stat_type" value="mrr"/>
            </div>
          </div>

          <div class="row">
            <div class="box">
              <div class="col-md-3">
                <h4 class="text-muted upper">Current</h4>
                <h1>28.031€ <small class="oGreen">+7%</small></h1>
              </div>


              <div class="col-md-3">
                <h4 class="text-muted">1 MONTH AGO</h4>
                <h1>28.031€</h1>
              </div>


              <div class="col-md-3">
                <h4 class="text-muted">3 MONTHS AGO</h4>
                <h1>28.031€</h1>
              </div>


              <div class="col-md-3">
                <h4 class="text-muted">12 MONTH AGO</h4>
                <h1>28.031€</h1>
              </div>
              a
            </div>
          </div>

          <div class="row">
            <div class="box" style="height: 300px;">
              Another graph
            </div>
          </div>

          <div class="row">
            <div class="box" style="height: 300px;">
              Table
            </div>
          </div>

      </div>

    </div>
    </t>
  </template>
   
  </data>
</openerp>