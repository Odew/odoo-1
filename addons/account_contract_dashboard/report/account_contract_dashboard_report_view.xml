<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record model="ir.ui.view" id="action_account_asset_report_pivot">
        <field name="name">account.invoice.line.pivot</field>
        <field name="model">account.invoice.line</field>
        <field name="arch" type="xml">
            <pivot string="Recurring Revenue Analysis" disable_linking="True">
                <field name="asset_category_id" type="row"/>
                <field name="mrr" type="measure"/>
                <field name="price_subtotal" type="measure"/>
                <field name="partner_id" type="col"/>
            </pivot>
        </field>
    </record>

    <menuitem id="action_contract_dashboard_report" name="MRR Analysis" parent="account.menu_finance_reporting" sequence="25"/>


    <record id="action_contract_dashboard_report_main" model="ir.actions.client">
        <field name="name">Revenue KPIs</field>
        <field name="tag">account_contract_dashboard_main</field>
    </record>

    <record id="action_contract_dashboard_report_forecast" model="ir.actions.client">
        <field name="name">Metrics Forecasting</field>
        <field name="tag">account_contract_dashboard_forecast</field>
    </record>

    <menuitem action="action_contract_dashboard_report_main" id="menu_action_contract_dashboard_report_main" parent="action_contract_dashboard_report" name="Revenue KPIs"/>
    <menuitem action="action_contract_dashboard_report_forecast" id="menu_action_contract_dashboard_report_forecast" parent="action_contract_dashboard_report" name="Forecast"/>


    <record id="action_analytic_entries_report" model="ir.actions.act_window">
        <field name="name">Analytic Entries Analysis</field>
        <field name="res_model">analytic.entries.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">pivot,graph</field>
        <field name="search_view_id" ref="account.view_analytic_entries_report_search"/>
        <field name="context">{'search_default_Account':1, 'group_by': 'product_id'}</field>
        <field name="help">From this view, have an analysis of your different analytic entries following the analytic account you defined matching your business need. Use the tool search to analyse information about analytic entries generated in the system.</field>
    </record>

</data>
</openerp>
